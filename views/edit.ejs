<% include partials/header %>

<div class="container">
  <div class="page-header">
    <h1>Edit <%= blog.title %></h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form action="/posts" method="POST">
      <input type="hidden" name="_csrf">
        <div class="form-group">
          <label for="blog[title]">Title</label>
          <input type="text" name="blog[title]" class="form-control" value="<%= blog.title %>">
        </div>
        <div class="form-group">
          <label for="blog[image]">Image</label>
          <input type="text" name="blog[image]" class="form-control" value="<%= blog.image %>">
        </div>
        <div class="form-group">
          <label for="blog[body]">Content</label>
          <textarea name="blog[body]" class="form-control" rows="4"><%= blog.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>


<% include partials/footer %>