<% include partials/header %>

<div class="container">
  <div class="panel panel-default">
    <div class="container">
      <a href="/posts/<%= blog._id %>/edit" class="btn btn-info">Edit</a>
      <form action="/posts/<%= blog._id %>?_method=DELETE" method="POST" style="display: inline-block;">
        <button class="btn btn-danger">Delete</button>
      </form>
      <h1><%= blog.title %></h1>
      <img class="show-image" src="<%= blog.image %>" alt="">
      <span><%= blog.created.toDateString() %></span>
      <p><%- blog.body %></p>
    </div>
  </div>
</div>

<% include partials/footer %>