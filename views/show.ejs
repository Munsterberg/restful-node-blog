<% include partials/header %>

<div class="container">
  <div class="panel panel-default">
    <div class="container">
      <div class="btn-group">
        <a href="/posts/<%= blog._id %>/edit" class="btn btn-info">Edit</a>
        <a href="" class="btn btn-danger">Delete</a>
      </div>
      <h1><%= blog.title %></h1>
      <img class="show-image" src="<%= blog.image %>" alt="">
      <span><%= blog.created.toDateString() %></span>
      <p><%= blog.body %></p>
    </div>
  </div>
</div>

